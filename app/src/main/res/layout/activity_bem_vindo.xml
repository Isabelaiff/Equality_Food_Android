<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="2dp"
    tools:layout_editor_absoluteY="-50dp">

    <ImageView
        android:id="@+id/bg"
        android:layout_width="537dp"
        android:layout_height="943dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.708"
        app:srcCompat="@drawable/bg_bem_vindo2" />

    <ImageView
        android:id="@+id/Card"
        android:layout_width="327dp"
        android:layout_height="494dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bg"
        app:layout_constraintVertical_bias="0.669"
        app:srcCompat="@drawable/rectangle_30" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="273dp"
        android:layout_height="106dp"
        android:text="Aqui você encontra comida de qualidade próximas à data de validade por um preço justo! Assim você economiza e ainda reduz o desperdício de alimentos"
        android:textAlignment="center"
        android:textColor="#321213"
        android:textColorLink="#80141E"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/Card"
        app:layout_constraintEnd_toEndOf="@+id/Card"
        app:layout_constraintHorizontal_bias="0.533"
        app:layout_constraintStart_toStartOf="@+id/Card"
        app:layout_constraintTop_toTopOf="@+id/Card"
        tools:text="Aqui você encontra comida de qualidade próximas à data de validade por um preço justo! Assim você economiza e ainda reduz o desperdício de alimentos" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="55dp"
        android:text="Bem-vindo(a) ao "
        android:textAlignment="center"
        android:textColor="#321213"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/Card"
        app:layout_constraintEnd_toEndOf="@+id/Card"
        app:layout_constraintHorizontal_bias="0.387"
        app:layout_constraintStart_toStartOf="@+id/Card"
        app:layout_constraintTop_toTopOf="@+id/Card"
        app:layout_constraintVertical_bias="0.074" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="275dp"
        android:layout_height="48dp"
        android:layout_marginStart="38dp"
        android:layout_marginEnd="55dp"
        android:text="EqualityFood"
        android:textAlignment="center"
        android:textColor="#321213"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@+id/Card"
        app:layout_constraintEnd_toEndOf="@+id/Card"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="@+id/Card"
        app:layout_constraintTop_toTopOf="@+id/Card"
        app:layout_constraintVertical_bias="0.173" />

    <Button
        android:id="@+id/btnVamosLa"
        android:layout_width="220dp"
        android:layout_height="50dp"
        android:layout_marginStart="99dp"
        android:layout_marginEnd="98dp"
        android:backgroundTint="#80141E"
        android:text="Vamos lá!"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#80141E"
        android:textColorHint="#80141E"
        android:textColorLink="#80141E"
        app:cornerRadius="19dp"
        app:layout_constraintBottom_toBottomOf="@+id/Card"
        app:layout_constraintEnd_toEndOf="@+id/Card"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/Card"
        app:layout_constraintTop_toTopOf="@+id/Card"
        app:layout_constraintVertical_bias="0.895" />

</androidx.constraintlayout.widget.ConstraintLayout>