<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FEFAFD"
    android:backgroundTint="#FEFAFD"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity10">


    <LinearLayout
        android:layout_width="793dp"
        android:layout_height="179dp"
        android:layout_marginLeft="20dp">

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="#FDF9FC"
            android:contentDescription="bota a descrição aqui"
            android:src="@drawable/header" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="25dp"
            android:text="Pagamento"
            android:textColor="#F5991A"
            android:textSize="34sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:text="Subtotal:"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="R$00,00"
            android:textColor="#000000"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="49dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:text="Taxa de entrega:"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="R$00,00"
            android:textColor="#000000"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="220dp"
            android:text="Total:"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="R$00,00"
            android:textColor="#000000"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="754dp"
        android:layout_height="144dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/inputEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="242dp"
            android:text="Tempo de Entrega:"
            android:textColor="#000000"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="20 min"
            android:textColor="#000000"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="51dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            app:srcCompat="@drawable/cartao" />

        <EditText
            android:id="@+id/editTextNumberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:width="200dp"
            android:backgroundTint="#FDF9FC"
            android:gravity="center_horizontal"
            android:hint="   --------------"
            android:inputType="numberPassword"
            android:textColorHint="#070707"
            android:textSize="24sp" />

        <Button
            android:id="@+id/nomeVis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:backgroundTint="#FDF9FC"
            android:text="Trocar"
            android:textColor="#4485E5"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="366dp"
        android:layout_height="58dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/campoEmail"
            android:layout_width="248dp"
            android:layout_height="match_parent"
            android:backgroundTint="#FDF9FC"
            android:hint="CPF/CNPJ na nota"
            android:inputType="text"
            android:textColorHint="#070707" />

        <Button
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="51dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:backgroundTint="#FDF9FC"
            android:text="Trocar"
            android:textColor="#4485E5"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="627dp"
        android:layout_height="190dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/finalizar"
            android:layout_width="230dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/borda_botao"
            android:hint="Pagar"
            android:textColorHint="#FFFFFF"
            android:textSize="20sp"
            app:cornerRadius="15dp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="956dp"
        android:layout_height="346dp"
        android:src="@drawable/group_6__1_" />

</LinearLayout>